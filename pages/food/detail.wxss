/* pages/scenery/detail.wxss */
.top {
  width:100%;
  height:415rpx;
  position: relative;
  z-index: 9;
}
.top image {
  width:100%;
  height:415rpx;
}
.infomation {
  width:100%;
  height:256rpx;
  background: #fff;
  border-radius: 20rpx;
  z-index: 10;
  position: relative;
  top:-20rpx;
  overflow: hidden;
}
page {background: #f2f2f2;}
.infomation>text {
  line-height: 98rpx;
  font-weight: 900;
  color: #1c1c1c;
  font-size: 34rpx;
  margin-left: 55rpx;
}
.detail {
  width:707rpx;
  height:138rpx;
  position: relative;
  margin: auto;
  background: #f2f2f2;
  box-sizing: border-box;
  padding: 0 38rpx;
}
.detailTop {
  width:100%;
  height:142rpx;
  /* border-bottom: 1px solid #d2d2d2; */
  color: #4d9427;
}
.map {
  padding-top: 28rpx;
  font-size: 29rpx;
  background-repeat: no-repeat;
  background-size: 21rpx 28rpx;
  background-position: 0 36rpx;
  padding-left: 32rpx;
}
.phone {
  font-size: 27rpx;
  margin-top: 15rpx;
  background-repeat: no-repeat;
  background-size: 24rpx 25rpx;
  background-position: 0 5rpx;
  padding-left: 32rpx;
}
.detailBottom {
  width:100%;
  position: relative;
}
.detailFloat {
  float:left;
  margin-top: 35rpx;
  margin-left: 35rpx;
}
.detailFloat:first-child {width:50%;}
.detailFloat view:first-child {
  font-size: 27rpx;
  color: #313233;
}
.detailFloat view:last-child {
  font-size: 27rpx;
  margin-top: 16rpx;
}
.introduction {
  width:100%;
  border-radius: 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 16rpx; 
}
.introduction .text {
  width:100%;
  height:82rpx;
  line-height: 82rpx;
  font-size: 29rpx;
  color: #1c1c1c;
  border-bottom: 1px solid #e1e1e1;
  padding-left: 27rpx;
  box-sizing: border-box;
}
.content {
  line-height: 48rpx;
  font-size: 27rpx;
  color: #6e6e6e;
  text-align: justify;
  padding:43rpx;
  box-sizing: border-box;
}
.fixed {
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index: 999;
  background: rgba(0,0,0,.3);
}
.tel {
  width:578rpx;
  height:350rpx;
  position: relative;
  margin: -175rpx auto 0;
  top:50%;
  border-radius: 30rpx;
  overflow: hidden;
}
.telTop {
  width:100%;
  text-align: center;
  height:87rpx;
  line-height: 87rpx;
  background: #9bc770;
  color: #fff;
  font-size: 32rpx;
}
.telMain {
  width:100%;
  background: #fff;
  height:188rpx;
  overflow: hidden;
  position: relative;
}
.telMain image {
  width:88rpx;
  height:88rpx;
  position: absolute;
  left:64rpx;
  top:50%;
  margin-top: -44rpx;
}
.telText text {
  display: block;
  margin-left: 170rpx;
}
.telText text:first-child {
  color: #5e5e5f;
  font-size: 29rpx;
  margin-top: 47rpx;
}
.telText text:last-child {
    color: #ff4e00;
    font-size: 36rpx;
    margin-top: 16rpx;
}
.success {
  width:50%;
  position: absolute;
  bottom:0;
  left:0;
  height:77rpx;
  background: #eeb756;
  color: #fff;
  font-size: 27rpx;
  text-align: center;
  line-height: 77rpx;
}
.cel {
  width:50%;
  position: absolute;
  bottom:0;
  right:0;
  height:77rpx;
  background: #eceff1;
  color: #949494;
  font-size: 27rpx;
  text-align: center;
  line-height: 77rpx;
}
.hide {display: none;}
.show {display: block;}