/* pages/trend/detail.wxss */
page {background: #f2f2f2;} 
.top {
  width:100%;
  height:182rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 25rpx;
}
.title {
  font-size: 38rpx;
  color: #333;
  width:100%; 
white-space:nowrap; 
text-overflow:ellipsis; 
-o-text-overflow:ellipsis; 
overflow: hidden;
line-height: 110rpx;
}
.top text {font-size: 24rpx;}
.text {
  width:100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 20rpx;
}
.text .content {
  font-size: 27rpx;
  color: #535353;
  overflow: hidden;
  text-align: justify;
  line-height: 48rpx;
}
.bottom {
  padding: 50rpx 0;
}
.bottom .read {font-size: 24rpx;color: #a7a7a7;float:left;}
.bottom .zan {
  float:right;
  font-size: 24rpx;
  color: #657a9c;
  background-repeat: no-repeat;
  background-size: 23rpx 23rpx;
  background-position: 0 5rpx;
  padding-left: 30rpx;
}
.comment {
  width:100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid #e1e1e1;
}
.commentTop {
  width:100%;
  height:83rpx;
  line-height: 83rpx;
  padding-left: 26rpx;
  color: #1c1c1c;
  font-size: 29rpx;
  border-bottom: 1px solid #e1e1e1;
  box-sizing: border-box;
}
.main {padding-top: 35rpx;padding-bottom: 40rpx;border-bottom: 1px solid #e1e1e1;}
.main:last-child {border-bottom:none;}
.headImg {
  width:48rpx;
  height:48rpx;
  border-radius: 50%;
  float:left;
  margin-left: 10rpx;
}
.infomation {
  margin-left: 75rpx;
}
.name {
  font-size: 28rpx;
  color: #a2a2a2;
}
.name text {
  float:right;
  font-size: 24rpx;
  color: #657a9c;
  background-repeat: no-repeat;
  background-size: 23rpx 23rpx;
  background-position: 0 5rpx;
  padding-left: 30rpx;
}
.commentText {
  font-size: 28rpx;
  color: #535353;
  margin: 25px 0 40rpx 0;
  text-align: justify;
}
.time {font-size: 24rpx;color: #a2a2a2;}
.fixed {
  width:100%;
  height:108rpx;
  position: fixed;
  bottom:0;
  left:0;
  background: #f2f2f2;
  z-index: 99;
}
.push {
  width:514rpx;
  height:57rpx;
  text-align: center;
  line-height: 57rpx;
  border-radius: 30rpx;
  font-size: 27rpx;
  background: #a4c67b;
  color: #fff;
  position: relative;
  top:50%;
  margin:-28.5rpx auto 0;
}
.review {
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  z-index: 9999999;
  background: rgba(0,0,0,.2);
}
.reviewMain {
  width:720rpx;
  height:424rpx;
  position: relative;
  margin:-212rpx auto 0;
  top:50%;
  background: #fff;
  border-radius: 20rpx;
}
.reviewTop {
  width:100%;
  height:113rpx;
  text-align: center;
  line-height: 113rpx;
  color: #242424;
  font-size: 36rpx;
}
.reviewTop text {
  font-size: 28rpx;
  color: #868686;
}
.reviewMain textarea {
  width:622rpx;
  height:135rpx;
  padding: 20rpx;
  background: #f6f5f5;
  font-size: 28rpx;
  color:#a0a0a0;
  margin: auto;
  position: relative;
}